<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_alignTop="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="8dp"
        android:id="@+id/UsernameEditText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@id/UsernameEditText"
        android:layout_alignLeft="@id/UsernameEditText"
        android:layout_alignStart="@id/UsernameEditText"
        android:layout_marginTop="40dp"
        android:id="@+id/PasswordEditText" />

    <Button
        android:text="@string/CreateAccountButtonText"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_below="@id/PasswordEditText"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="38dp"
        android:id="@+id/CreateAccountButton" />

    <Button
        android:text="@string/LoginButtonText"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/CreateAccountButton"
        android:layout_alignRight="@id/PasswordEditText"
        android:layout_alignEnd="@id/PasswordEditText"
        android:layout_marginRight="45dp"
        android:layout_marginEnd="45dp"
        android:id="@+id/LoginButton" />

    <TextView
        android:text="@string/LoginUsernameTagText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="185dp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="57dp"
        android:layout_marginStart="57dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_alignBaseline="@id/PasswordEditText"
        android:text="@string/passwordTagText"
        android:labelFor="@id/UsernameEditText"
        android:layout_alignBottom="@id/PasswordEditText"
        android:layout_alignLeft="@id/LoginButton"
        android:layout_alignStart="@id/CreateAccountButton" />
</RelativeLayout>