<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_horizontal_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    app:layout_behavior="@string/bottom_sheet_behavior"
    app:behavior_peekHeight="@dimen/bottom_sheet_peek"
    app:behavior_hideable="false"
    android:background="@drawable/bottom_sheet_drawable">
    <!-- TODO Decide on all the layout stuff for this bottom modal sheet -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextSwitcher
            android:id="@+id/view_turf_info_textview"
            android:drawableStart="@drawable/ic_menu_black_24dp"
            android:text="@string/string_view_turf_information"
            android:textColor="@color/colorAccent"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/activity_horizontal_margin"
            android:drawableLeft="@drawable/ic_menu_black_24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/ic_business_black_24dp" />
            <android.support.v7.widget.AppCompatTextView
                android:text="Name of turf"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin" />
        </LinearLayout>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>