<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="12"
        android:hint="@string/nameHintText"
        android:layout_alignBaseline="@id/textView0"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/textView0"
        android:layout_toEndOf="@id/textView0"
        android:id="@+id/editText0" />

    <TextView
        android:text="@string/nameTagText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:labelFor="@id/editText0"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/textView0" />

    <TextView
        android:text="@string/emailTagText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@id/editText1"
        android:layout_below="@id/editText0"
        android:layout_marginTop="25dp"
        android:layout_alignEnd="@id/textView0"
        android:layout_alignRight="@id/textView0"
        android:id="@+id/textView1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="12"
        android:hint="@string/emailHintText"
        android:layout_alignBaseline="@id/textView1"
        android:layout_toRightOf="@id/textView1"
        android:layout_toEndOf="@id/textView1"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/editText1" />

    <TextView
        android:text="@string/passwordTagText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@id/editText2"
        android:layout_alignEnd="@id/textView1"
        android:layout_alignRight="@id/textView1"
        android:layout_below="@id/editText1"
        android:layout_marginTop="25dp"
        android:id="@+id/textView2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="12"
        android:layout_alignBaseline="@id/textView2"
        android:layout_alignLeft="@+id/editText1"
        android:layout_alignStart="@+id/editText1"
        android:id="@+id/editText2" />

    <TextView
        android:text="@string/reenterPasswordTagText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/textView2"
        android:textAlignment="viewEnd"
        android:gravity="end"
        android:layout_alignRight="@id/textView2"
        android:layout_below="@id/editText2"
        android:layout_marginTop="25dp"
        android:id="@+id/textView3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="12"
        android:id="@+id/editText3"
        android:layout_alignBaseline="@id/textView3"
        android:layout_alignLeft="@id/editText2"
        android:layout_alignStart="@id/editText2"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />



    <TextView
        android:text="@string/phoneNumberTagText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/textView3"
        android:layout_alignRight="@id/textView3"
        android:labelFor="@id/editText4"
        android:layout_below="@id/editText3"
        android:layout_marginTop="25dp"
        android:id="@+id/textView4" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="12"
        android:layout_alignBaseline="@id/textView4"
        android:layout_alignStart="@id/editText3"
        android:layout_alignLeft="@id/editText3"
        android:id="@+id/editText4" />



    <Button
        android:text="@string/clearText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText4"
        android:layout_toLeftOf="@+id/editText4"
        android:layout_toStartOf="@+id/editText4"
        android:layout_marginTop="40dp"
        android:id="@+id/button0" />

    <Button
        android:text="@string/submitText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/button0"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:id="@+id/button1" />

    <!--<Button-->
        <!--android:text="@string/googleSignInText"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@id/textView5"-->
        <!--android:layout_marginStart="50dp"-->
        <!--android:layout_marginLeft="50dp"-->
        <!--android:textAllCaps="false"-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:id="@+id/button2" />-->

    <com.google.android.gms.common.SignInButton
        android:id="@+id/googleSignInButton"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/textView5"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"

        />

    <TextView
        android:text="@string/signInWithTagText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/button1"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView5" />

    <com.facebook.login.widget.DeviceLoginButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/facebook"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/googleSignInButton"
        android:layout_marginTop="10dp"
        android:id="@+id/loginButton" />
</RelativeLayout>